@model MyShop1.Models.Category

@{
    ViewData["Title"] = "Удалить категорию";
}

<h2>Вы уверены, что хотите удалить эту категорию?</h2>

<div>
    <strong>Действительно удалить категорию:</strong> @Model.Name
</div>

<form method="post" asp-action="Delete" asp-route-id="@Model.Id">
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Отмена</a>
</form>
