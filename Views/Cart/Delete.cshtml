@model MyShop1.Models.CartItem

<h2>Подтвердите удаление товара из корзины</h2>

<h3>Вы уверены, что хотите удалить товар "@Model.Product.Name" из корзины?</h3>

<form asp-action="RemoveFromCartConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
